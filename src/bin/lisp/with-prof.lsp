(and (builtin? 'time)
     (number? +bps+)
  (macro with-prof body
    (let (stime    (symbol)
          duration (symbol))
      $(let (,stime (time))
         ((()
            ,@body))
         (let (,duration (- (time) ,stime))
           (out "Time spent: ")
           (print (/ ,duration +bps+))
           (out "s (")
           (print ,duration)
           (out " bekloppies)")
           (terpri)
           ,duration)))))
