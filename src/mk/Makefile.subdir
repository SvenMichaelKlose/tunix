# List of subdirectories containing their own Makefiles
SUBDIRS ?= $(shell ls -d)

# Default target
.PHONY: all
all: $(SUBDIRS)

.PHONY: test
test: $(addprefix test-,$(SUBDIRS))

.PHONY: $(SUBDIRS)
$(SUBDIRS):
	$(MAKE) -C $@

test-%:
	$(MAKE) -C $* test

.PHONY: clean
clean: $(addprefix clean-,$(SUBDIRS))

clean-%:
	$(MAKE) -C $* clean
