CC			= gcc
CFLAGS      = -c -Werror -Wall -DTARGET=$(TARGET) -I$(TUNIX_LIB)
LD		    = gcc
NO_EXOMIZER = 1

ifndef COPTFLAGS
    ifdef GC_STRESS
        COPTFLAGS += -O3 -flto
        LDFLAGS   += -flto
    else
        ifdef NDEBUG
            COPTFLAGS  += -Os -flto
            LDFLAGS   += -flto
        else
            COPTFLAGS  += -O0 -g
            LDFLAGS    += -g
        endif
    endif
endif
