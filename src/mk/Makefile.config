THIS_DIR := $(dir $(abspath $(lastword $(MAKEFILE_LIST))))
SRC := $(THIS_DIR)/..

-include $(SRC)/config

COMMODORE_TARGETS = c128 c16 c64 pet plus4 vic20
CC65_TARGETS 	  = $(COMMODORE_TARGETS)
GCC_TARGETS 	  = unix
VALID_TARGETS     = $(CC65_TARGETS) $(GCC_TARGETS)

ifneq (,$(filter $(TARGET), $(CC65_TARGETS)))
TARGETCC=cc65
endif
ifneq (,$(filter $(TARGET), $(GCC_TARGETS)))
TARGETCC=gcc
endif

TUNIX_INCLUDE ?= $(SRC)/include
TUNIX_LIB     ?= $(SRC)/lib

PROGRAM_PLAIN  = $(PROGRAM).prg

EXOMIZER ?= $(SRC)/contrib/exomizer-3.0.2/src/exomizer
EXOMIZER_FLAGS ?= -B -n

include $(SRC)/mk/Makefile.config.$(TARGETCC)

ifdef CHECK_OBJ_POINTERS
CFLAGS += -DCHECK_OBJ_POINTERS
endif

ifdef COMPRESSED_CONS
CFLAGS += -DCOMPRESSED_CONS
endif

ifdef DEBUG_INTERNAL
CFLAGS += -DDEBUG_INTERNAL
endif

ifdef DUMP_MARKED
CFLAGS += -DDUMP_MARKED
endif

ifdef DUMP_SWEEPED
CFLAGS += -DDUMP_SWEEPED
endif

ifdef GC_AFTER_LOAD_THRESHOLD
CFLAGS += -DGC_AFTER_LOAD_THRESHOLD=$(GC_AFTER_LOAD_THRESHOLD)
endif

ifdef GC_STRESS
CFLAGS += -DGC_STRESS
endif

ifdef TEST
CFLAGS += -DTEST
endif

ifdef NAIVE
CFLAGS += -DNAIVE
endif

ifdef NDEBUG
CFLAGS += -DNDEBUG
endif

ifdef NO_DEBUGGER
CFLAGS += -DNO_DEBUGGER
endif

ifdef NO_IMAGES
CFLAGS += -DNO_IMAGES
endif

ifdef NO_ONERROR
CFLAGS += -DNO_ONERROR
endif

ifdef PARANOID
CFLAGS += -DPARANOID
endif

ifdef VERBOSE_COMPRESSED_CONS
CFLAGS += -DVERBOSE_COMPRESSED_CONS
endif

ifdef VERBOSE_EVAL
CFLAGS += -DVERBOSE_EVAL
endif

ifdef VERBOSE_GC
CFLAGS += -DVERBOSE_GC
endif

ifdef VERBOSE_LOAD
CFLAGS += -DVERBOSE_LOAD
endif

ifdef VERBOSE_MACROEXPAND
CFLAGS += -DVERBOSE_MACROEXPAND
endif

ifeq ($(TARGET), c128)
CFLAGS += -DTARGET_C128
endif
ifeq ($(TARGET), c16)
CFLAGS += -DTARGET_C16
endif
ifeq ($(TARGET), c64)
CFLAGS += -DTARGET_C64
endif
ifeq ($(TARGET), pet)
CFLAGS += -DTARGET_PET
endif
ifeq ($(TARGET), plus4)
CFLAGS += -DTARGET_PLUS4
endif
ifeq ($(TARGET), unix)
CFLAGS += -DTARGET_UNIX
endif
ifeq ($(TARGET), vic20)
CFLAGS += -DTARGET_VIC20
endif
